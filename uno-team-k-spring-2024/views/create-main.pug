doctype html
html
  include head.pug
  include navbar.pug
  body
    .wrapper
      include chat.pug
      .content
        #joinGame
          h1 Create a game:
            .d-flex
            form.mx-1(action="/home/generatePublicGame" method="post")
              .form-group
                input.form-control(type="number" style="height: 32px" name="maxPlayers" placeholder="2" min="2" max="4" value="2")
              input.btn.btn-secondary(type="submit" value="PUBLIC")
            form.mx-1(action="/home/generatePrivateGame" method="post")
              .form-group
                input.form-control(type="number" style="height: 32px" name="maxPlayers" placeholder="2" min="2" max="4" value="2")
              input.btn.btn-secondary(type="submit" value="PRIVATE")
              
              
            h2 My games:
            .my-games
              each game in games.slice().reverse()
                .my-game
                  p
                    b game id:
                    br
                    | #{game.id}
                  p
                    b seats:
                    br
                    | #{game.number}/4
                  p
                    b created
                    br
                    | #{game.createdAt}
                  p
                    b type
                    br
                    | #{game.isPrivate === true ? 'Private' : 'Public'}
                  form.mx-1(action="/home/join/" + game.id  method="post")
                    if game.isPrivate === true
                      input.btn.btn-primary(type="submit" value="join")
                    else
                      input.btn.btn-success(type="submit" value="join")
                  if game.joinCode != ""
                    .my-game-code
                      p code: 
                      p.codeText #{game.joinCode}
 
  include footer.pug
